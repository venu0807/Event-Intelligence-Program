# ──────────────────────────────────────────────
# MySQL Database
# ──────────────────────────────────────────────
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=event_intelligence

# ──────────────────────────────────────────────
# JWT Auth  (use a random 64-char string)
# Generate one: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# ──────────────────────────────────────────────
JWT_SECRET=replace_with_64_char_random_string

# ──────────────────────────────────────────────
# NewsAPI  →  https://newsapi.org  (free tier)
# ──────────────────────────────────────────────
NEWS_API_KEY=your_newsapi_key_here

# ──────────────────────────────────────────────
# Google Gemini  →  https://aistudio.google.com  (free tier)
# ──────────────────────────────────────────────
GEMINI_API_KEY=your_gemini_api_key_here

GEMINI_MODEL=gemini-1.5-flash-latest
GEMINI_MODEL_CANDIDATES=gemini-1.5-flash,gemini-1.5-pro-latest,gemini-1.5-pro
